{
  "name": "lotus365-api",
  "version": "1.0.0",
  "description": "Backend API for Lotus365 betting platform",
  "main": "server.js",
   {
     "scripts": {
       "build": "npm run build", // Your build command for the frontend
       "vercel-build": "npm run build", // Optional: if you have a specific build command for Vercel
       "start": "node server.js", // Your backend start command
       "client": "cd client && npm start", // Your frontend start command
       "dev": "concurrently \"npm run start\" \"npm run client\""
     }
   }
  "dependencies": {
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  }
} 
